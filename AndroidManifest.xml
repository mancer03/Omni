      package="omni.learn2develop.sith"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	
    <application android:icon="@drawable/icon" android:label="@string/app_name">
    
        <activity android:name=".OmniActivity"
                  android:label="OmniActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity android:name=".LoginActivity"
                  	android:label="LoginActivity">
            <intent-filter>
             	<action android:name=".LoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>
         
         <activity android:name=".Register"
                  	android:label="Register">
            <intent-filter>
             	<action android:name=".Register" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>
         
         <activity android:name=".Forgot"
                  	android:label="Forgot">
            <intent-filter>
             	<action android:name=".Forgot" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>
         
          <activity android:name=".profile"
                  	android:label="profile">
            <intent-filter>
             	<action android:name=".profile" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
         </activity>

    </application>
</manifest>