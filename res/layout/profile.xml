<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/RLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:id="@+id/txtinfo" 
android:textSize="18sp" 
android:layout_below="@+id/frameLayout1" 
android:layout_alignParentRight="true" 
android:layout_marginTop="24dp" 
android:layout_toRightOf="@+id/tag">
</TextView>

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:textSize="18sp" 
android:id="@+id/txtinfo2" 
android:layout_alignTop="@+id/rank" 
android:layout_toRightOf="@+id/tag">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="Email: " 
android:id="@+id/ratio" 
android:layout_below="@+id/txtinfo2" 
android:layout_alignLeft="@+id/tag">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="GamerTag: " 
android:id="@+id/tag" 
android:layout_alignTop="@+id/txtinfo" 
android:layout_centerHorizontal="true">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="Fullname: " 
android:id="@+id/rank" 
android:layout_below="@+id/txtinfo" 
android:layout_alignRight="@+id/ratio">
</TextView>

<FrameLayout android:layout_width="wrap_content" 
android:id="@+id/frameLayout" 
android:layout_height="wrap_content" 
android:layout_alignTop="@+id/tag" 
android:layout_toLeftOf="@+id/ratio" 
android:layout_alignBottom="@+id/ratio">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="148dp"
        android:src="@drawable/omnibkgrnd" >

    </ImageView>
</FrameLayout>

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:textSize="18sp" 
android:id="@+id/txtinfo3" 
android:layout_below="@+id/txtinfo2" 
android:layout_toRightOf="@+id/tag">
</TextView>

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:textSize="18sp" 
android:id="@+id/txtinfo4" 
android:layout_below="@+id/txtinfo3" 
android:layout_toRightOf="@+id/tag">
</TextView>

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:textSize="18sp" 
android:id="@+id/txtinfo5" 
android:layout_below="@+id/txtinfo4" 
android:layout_toRightOf="@+id/tag">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="Phone Number: " 
android:id="@+id/quit" 
android:layout_below="@+id/txtinfo3" 
android:layout_alignRight="@+id/ratio">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="Platform: " 
android:id="@+id/console" 
android:layout_below="@+id/txtinfo4" 
android:layout_alignRight="@+id/quit">
</TextView>

<TextView android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:text="About Me: " 
android:id="@+id/about" 
android:layout_below="@+id/txtinfo5" 
android:layout_alignParentLeft="true" 
android:layout_marginLeft="20dp">
</TextView>

<TextView android:layout_width="fill_parent" 
android:layout_height="50px" 
android:textSize="18sp" 
android:id="@+id/aboutinfo" 
android:layout_alignTop="@+id/about" 
android:layout_toRightOf="@+id/about">
</TextView>

<Button android:layout_width="fill_parent" 
android:layout_height="wrap_content" 
android:id="@+id/Editprofilebtn" 
android:text="Edit Profile" 
android:layout_alignParentBottom="true" 
android:layout_toLeftOf="@+id/textView1"></Button>

</RelativeLayout>